<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">#FFFFFF</item>
        <item name="android:trackTint" tools:ignore="NewApi">@color/white</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gibson_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomPopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextNormalBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextEditor">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#CACACA</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Active Item -->
    <style name="BottomNavTextActive">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/yellow_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="BottomNavIconActive">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">@color/yellow_color</item>
    </style>

    <style name="BottomNavButton">
        <item name="android:backgroundTint">@color/blue_color</item>
    </style>

    <!-- Inactive Item -->
    <style name="BottomNavTextInactive">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/disable_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="BottomNavIconInactive">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">@color/disable_color</item>
    </style>
</resources>