<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        style="@style/TextHeading"
        android:text="Network Contacts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewmanu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/baseline_clear_24"
        android:backgroundTint="@color/black"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_background3"
        style="@style/TextEditor"
        android:hint="Enter Contact Name"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_background3"
        style="@style/TextEditor"
        android:hint="Contact Number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="10"
        android:paddingHorizontal="20dp"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_background3"
        android:hint="Company Name"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        style="@style/TextEditor"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/textView10"
        style="@style/TextNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Select Trip type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:columnCount="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <CheckBox
            android:id="@+id/oneway"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            style="@style/TextBold"
            android:text="One Way"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/round"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Round Trip"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />

    </GridLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:text="Select Vehicle Type"
        style="@style/TextNormal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:columnCount="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <CheckBox
            android:id="@+id/vh1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            style="@style/TextBold"
            android:text="Hatchback"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            style="@style/TextBold"
            android:text="Sedan"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            style="@style/TextBold"
            android:text="Ertiga"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Suv"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh9"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Kia Cerens"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />
        <CheckBox
            android:id="@+id/vh5"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:text="Innova"
            android:textColor="@color/black_grey"
            android:textSize="14dp"
            android:textStyle="bold"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh6"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Innova Crysta"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />
        <CheckBox
            android:id="@+id/vh10"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Innova Hycross"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh7"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Force Traveller"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />

        <CheckBox
            android:id="@+id/vh8"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_columnWeight="1"
            android:text="Bus"
            style="@style/TextBold"
            app:buttonTint="@color/checkbox" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:columnCount="2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3">

        <androidx.cardview.widget.CardView
            android:id="@+id/addvehicle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/buttonColorRed"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Delete"
                android:textColor="@color/white"
                style="@style/TextHeading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/more"
                app:layout_constraintStart_toStartOf="@+id/more" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/addbooking"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/blue_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                style="@style/TextHeading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/more"
                app:layout_constraintStart_toStartOf="@+id/more" />

        </androidx.cardview.widget.CardView>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>