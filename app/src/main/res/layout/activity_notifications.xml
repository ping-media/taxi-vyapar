<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".notifications">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_chevron_right"
                android:backgroundTint="@color/black"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                style="@style/TextHeading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Turn on notifications to never miss important Booking, Ride confirmation &amp; driver details and Payment &amp; receipt informations."
                style="@style/TextNormal"
                app:layout_constraintTop_toBottomOf="@+id/cardView11" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/textView16">

                <RadioButton
                    android:id="@+id/rdupi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gredient3"
                    android:backgroundTint="@color/green_color"
                    android:checked="true"
                    android:fontFamily="@font/poppins_bold"
                    android:includeFontPadding="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="ON"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:buttonTint="@color/white" />

                <RadioButton
                    android:id="@+id/rdbank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_gredient3"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:includeFontPadding="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="OFF"
                    android:textColor="#858585"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:buttonTint="#858585" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/notifcont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Select Vehicle type you want to notify."
                    style="@style/TextNormal"
                    app:layout_constraintTop_toTopOf="parent" />

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView9">

                    <CheckBox
                        android:id="@+id/vh1"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Hatchback"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh2"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Sedan"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh3"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Ertiga"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh4"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Suv"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh9"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Kia Cerens"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh5"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Innova"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh6"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Innova Crysta"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh10"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Innova Hycross"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh7"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Force Traveller"
                        app:buttonTint="@color/checkbox" />

                    <CheckBox
                        android:id="@+id/vh8"
                        style="@style/TextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_columnWeight="1"
                        android:text="Bus"
                        app:buttonTint="@color/checkbox" />

                </GridLayout>


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Select Trip type"
                    style="@style/TextNormal"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

                <GridLayout
                    android:id="@+id/gridLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/textView10">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9">


                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:includeFontPadding="false"
                            android:text="One Way"
                            android:textColor="#858585"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/more"
                            app:layout_constraintStart_toStartOf="@+id/more" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_columnWeight="1"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9">


                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:includeFontPadding="false"
                            android:text="Round Trip"
                            android:textColor="#858585"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/more"
                            app:layout_constraintStart_toStartOf="@+id/more" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/yellow_color"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9">


                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:includeFontPadding="false"
                            android:text="All"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/more"
                            app:layout_constraintStart_toStartOf="@+id/more" />

                    </androidx.cardview.widget.CardView>


                </GridLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    style="@style/TextNormal"
                    android:text="Add Pickup location"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerpickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/et_background3"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:hint="Select pickup location"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="20dp"
                        android:paddingRight="50dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        style="@style/TextEditor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/baseline_location_on_24"
                        android:backgroundTint="@color/black_grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    style="@style/TextNormal"
                    android:text="Add Drop location"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerdrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/et_background3">

                    <TextView
                        android:id="@+id/droplocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        style="@style/TextEditor"
                        android:gravity="center_vertical"
                        android:hint="Select drop location"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="20dp"
                        android:paddingRight="50dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/baseline_location_on_24"
                        android:backgroundTint="@color/black_grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>